<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.sampson.android.xiandou">

    <!-- 这个权限用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- 这个权限用于获取wifi的获取权限，wifi信息会用来进行网络定位 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!-- 用于读取手机当前的状态 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 写入扩展存储，向扩展卡写入数据，用于写入离线定位数据 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 访问网络，网络定位需要上网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- SD卡读取权限，用户写入离线定位数据 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <!-- 在 屏幕最顶部显示addview-->
    <uses-permission android:name="android.permission.SYSTEM_OVERLAY_WINDOW" />

    <application
        android:name=".BaseApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.main.MainActivity"
            android:screenOrientation="portrait" />


        <!--备孕-->
        <activity
            android:name=".ui.haoyun.beiyun.BeiYunActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityNoActionBar" />

        <!-- 涨姿势 -->
        <activity
            android:name=".ui.haoyun.beiyun.ZhangZiShiActivity"
            android:label="@string/zhangzishi"
            android:screenOrientation="portrait" />

        <!--孕育-->
        <activity
            android:name=".ui.haoyun.yunyu.YunyuActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityNoActionBar" />

        <!-- 怀孕四十周 -->
        <activity
            android:name=".ui.haoyun.yunyu.fortyweeks.FortyWeeksActivity"
            android:label="@string/huaiyunsishizhou"
            android:screenOrientation="portrait" />

        <!-- 280天 -->
        <activity
            android:name=".ui.haoyun.yunyu.twohundredeighty.TwoHundredEightyActivity"
            android:label="@string/erbaibashitian"
            android:screenOrientation="portrait" />

        <!-- 孕期注意，胎教 -->
        <activity
            android:name=".ui.haoyun.yunyu.attention.PregnancyAttentionActivity"
            android:label="@string/yunqizhuyi"
            android:screenOrientation="portrait" />

        <!-- 爸爸讲故事 -->
        <activity
            android:name=".ui.haoyun.yunyu.info.StoryActivity"
            android:screenOrientation="portrait" />

        <!--胎教音乐-->
        <activity
            android:name=".ui.haoyun.yunyu.taijiaoyinyue.TaijiaoYinyueActivity"
            android:label="@string/taijiaoyinyue"
            android:screenOrientation="portrait" />

        <!--胎教知识-->
        <activity
            android:name=".ui.haoyun.yunyu.taijiaozhishi.TaijiaoZhishiActivity"
            android:label="@string/taijiaozhishi"
            android:screenOrientation="portrait" />

        <!--胎教知识内容-->
        <activity
            android:name=".ui.haoyun.yunyu.taijiaozhishi.ZhishiInfoActivity"
            android:screenOrientation="portrait" />

        <!-- 歌曲列表 -->
        <activity
            android:name=".ui.haoyun.yunyu.taijiaoyinyue.MusicListActivity"
            android:screenOrientation="portrait" />

        <!--育儿-->
        <activity
            android:name=".ui.haoyun.yuer.YuerActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityNoActionBar" />

        <!-- 故事列表 -->
        <activity
            android:name=".ui.haoyun.yunyu.info.InformationActivity"
            android:screenOrientation="portrait" />

        <!-- 用户详情 -->
        <activity
            android:name=".ui.mine.UserInfoActivity"
            android:label="@string/user_info"
            android:screenOrientation="portrait" />

        <!-- 播放歌曲 -->
        <activity
            android:name=".ui.haoyun.yunyu.taijiaoyinyue.PlayActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityNoActionBar" />

        <receiver android:name=".ui.haoyun.yunyu.taijiaoyinyue.receiver.StatusBarReceiver">
            <intent-filter>
                <action android:name="cn.sampson.android.xiandou.STATUS_BAR_ACTIONS" />
            </intent-filter>
        </receiver>

        <service android:name=".ui.haoyun.yunyu.taijiaoyinyue.service.PlayService" />
        <service
            android:name="com.qq.e.comm.DownloadService"
            android:exported="false" />

        <activity
            android:name="com.qq.e.ads.ADActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize" />

    </application>

</manifest>
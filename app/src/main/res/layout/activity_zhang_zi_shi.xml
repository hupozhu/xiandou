<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/text15"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="21dp"
                android:text="@string/tiwei" />

            <TextView
                style="@style/text13"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="7dp"
                android:text="@string/tiwei_brief" />

            <LinearLayout
                android:id="@+id/ll_tiwei1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="38dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:background="@drawable/selectable_tiwei_background"
                    android:padding="6dp"
                    android:src="@mipmap/tiwei1" />

                <ImageView
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/selectable_tiwei_background"
                    android:padding="6dp"
                    android:src="@mipmap/tiwei2" />

                <ImageView
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/selectable_tiwei_background"
                    android:padding="6dp"
                    android:src="@mipmap/tiwei3" />

                <ImageView
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/selectable_tiwei_background"
                    android:padding="6dp"
                    android:src="@mipmap/tiwei4" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tiwei2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="26dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:background="@drawable/selectable_tiwei_background"
                    android:padding="6dp"
                    android:src="@mipmap/tiwei5" />

                <ImageView
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/selectable_tiwei_background"
                    android:padding="6dp"
                    android:src="@mipmap/tiwei6" />

                <ImageView
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/selectable_tiwei_background"
                    android:padding="6dp"
                    android:src="@mipmap/tiwei7" />

                <ImageView
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/selectable_tiwei_background"
                    android:padding="6dp"
                    android:src="@mipmap/tiwei8" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tiwei3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="26dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:background="@drawable/selectable_tiwei_background"
                    android:padding="6dp"
                    android:src="@mipmap/tiwei9" />

                <ImageView
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/selectable_tiwei_background"
                    android:padding="6dp"
                    android:src="@mipmap/tiwei10" />

                <ImageView
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/selectable_tiwei_background"
                    android:padding="6dp"
                    android:src="@mipmap/tiwei11" />

                <ImageView
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/selectable_tiwei_background"
                    android:padding="6dp"
                    android:src="@mipmap/tiwei12" />
            </LinearLayout>

            <TextView
                style="@style/text15"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="12dp"
                android:text="@string/zishi_tip"
                android:textColor="@color/red" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/common_gray" />

            <TextView
                android:id="@+id/tv_name"
                style="@style/text13"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="20dp"
                android:text="@string/xueming" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical">

                <TextView
                    style="@style/text13"
                    android:layout_marginRight="3dp"
                    android:text="@string/female_comfort_label" />

                <LinearLayout
                    android:id="@+id/female_comfort_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />

            </LinearLayout>

            <!--男方舒适度-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text13"
                    android:layout_marginRight="3dp"
                    android:text="@string/male_comfort_label" />

                <LinearLayout
                    android:id="@+id/male_comfort_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />
            </LinearLayout>


            <TextView
                style="@style/text13"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="12dp"
                android:text="@string/describe" />

            <TextView
                android:id="@+id/describe"
                style="@style/text13"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:layout_marginTop="6dp" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</FrameLayout>
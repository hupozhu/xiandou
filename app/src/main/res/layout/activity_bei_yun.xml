<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@mipmap/beiyun_top_background">

        <!--title-->
        <RelativeLayout
            android:id="@+id/rlTitle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/fl_back"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="30dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_title_back" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:text="闲豆"
                android:textColor="@color/gray7"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="129dp"
            android:layout_height="129dp"
            android:layout_centerInParent="true"
            android:background="@mipmap/beiyun_paopao">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:text="@string/jintianhaoyun"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_pregnancy_ratio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5%"
                    android:textColor="@color/blue"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/shape_text_blue_background"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="低"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">

        <!--涨姿势-->
        <LinearLayout
            android:id="@+id/zhangzishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40.5dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_zhangzishi" />

            <TextView
                style="@style/text15"
                android:layout_marginTop="6dp"
                android:text="@string/zhangzishi" />
        </LinearLayout>

        <!--白带拉丝-->
        <LinearLayout
            android:id="@+id/baidailasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="37dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40.5dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_baidailasi" />

            <TextView
                style="@style/text15"
                android:layout_marginTop="6dp"
                android:text="@string/baidailasi" />
        </LinearLayout>

        <!--B超测排-->
        <LinearLayout
            android:id="@+id/bchaocepai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="37dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40.5dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_bchaocepai" />

            <TextView
                style="@style/text15"
                android:layout_marginTop="6dp"
                android:text="@string/bchaocepai" />
        </LinearLayout>

        <!--祈愿-->
        <LinearLayout
            android:id="@+id/qiyuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="37dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40.5dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_qiyuan" />

            <TextView
                style="@style/text15"
                android:layout_marginTop="6dp"
                android:text="@string/qiyuan" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f1f1f1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical">

        <View
            android:layout_width="35dp"
            android:layout_height="1dp"
            android:background="@color/gray1" />

        <TextView
            style="@style/text15"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="@string/beiyunzhilan" />

        <View
            android:layout_width="35dp"
            android:layout_height="1dp"
            android:background="@color/gray1" />
    </LinearLayout>
</LinearLayout>

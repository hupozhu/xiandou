<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="211dp"
                android:background="@mipmap/mine_bg">

                <RelativeLayout
                    android:id="@+id/rl_user_info"
                    android:layout_width="match_parent"
                    android:layout_height="77dp"
                    android:layout_marginTop="56dp">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/riv_avatar"
                        android:layout_width="77dp"
                        android:layout_height="77dp"
                        android:layout_marginLeft="68dp"
                        android:src="@mipmap/default_avatar"
                        app:riv_oval="true" />

                    <!--已登录-->
                    <RelativeLayout
                        android:id="@+id/rl_login"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/riv_avatar">

                        <TextView
                            android:id="@+id/tv_nickname"
                            style="@style/text15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:layout_marginTop="19dp" />

                        <ImageView
                            android:layout_width="17.5dp"
                            android:layout_height="17.5dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="49dp"
                            android:src="@mipmap/ic_setting_next" />
                    </RelativeLayout>

                    <!--未登录-->
                    <LinearLayout
                        android:id="@+id/ll_not_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="19dp"
                        android:layout_toRightOf="@+id/riv_avatar"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            style="@style/text15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_toRightOf="@+id/riv_avatar"
                            android:text="@string/login_register" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="3dp"
                            android:src="@mipmap/iv_login_next" />
                    </LinearLayout>

                </RelativeLayout>
            </FrameLayout>

            <LinearLayout
                android:id="@+id/ll_my_note"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@drawable/selectable_common_white_pressed_bg"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="19dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:src="@mipmap/ic_note" />

                <TextView
                    style="@style/text15"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:text="@string/my_circle" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e9e9e9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:gravity="center"
                android:orientation="horizontal">

                <!--我的回复-->
                <LinearLayout
                    android:id="@+id/ll_reply"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selectable_common_white_pressed_bg"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="21dp"
                        android:layout_height="23.5dp"
                        android:src="@mipmap/ic_myreply" />

                    <TextView
                        style="@style/text15"
                        android:layout_marginTop="12dp"
                        android:text="@string/my_reply" />
                </LinearLayout>

                <!--我的收藏-->
                <LinearLayout
                    android:id="@+id/ll_collect"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selectable_common_white_pressed_bg"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="23.5dp"
                        android:layout_height="23.5dp"
                        android:src="@mipmap/ic_tag" />

                    <TextView
                        style="@style/text15"
                        android:layout_marginTop="12dp"
                        android:text="@string/my_collect" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:background="#f7f7f7" />

            <!--关于我们-->
            <LinearLayout
                android:id="@+id/ll_about_us"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/selectable_common_white_pressed_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22.5dp"
                    android:layout_height="22.5dp"
                    android:layout_marginLeft="16.5dp"
                    android:src="@mipmap/ic_about_us" />

                <TextView
                    style="@style/text15"
                    android:layout_marginLeft="22.5dp"
                    android:text="@string/about_us" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="#d0d0d0" />

            <!--当前版本-->
            <LinearLayout
                android:id="@+id/ll_current"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/selectable_common_white_pressed_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22.5dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="16.5dp"
                    android:src="@mipmap/ic_current_version" />

                <TextView
                    style="@style/text15"
                    android:layout_marginLeft="22.5dp"
                    android:text="@string/current_version" />

                <TextView
                    android:id="@+id/tv_current_version"
                    style="@style/text15"
                    android:layout_marginLeft="22.5dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/current_version" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="#d0d0d0" />

            <View
                android:layout_width="match_parent"
                android:layout_height="27.5dp"
                android:background="#f7f7f7" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
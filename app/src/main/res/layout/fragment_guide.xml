<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/refresh_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_scrollFlags="scroll|enterAlways">

                <cn.sampson.android.xiandou.widget.banner.MainPageImageBanner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:bb_indicatorCornerRadius="6dp"
                    app:bb_indicatorGap="7dp"
                    app:bb_indicatorHeight="6dp"
                    app:bb_indicatorSelectColor="@color/green"
                    app:bb_indicatorStyle="CORNER_RECTANGLE"
                    app:bb_indicatorUnselectColor="@color/black"
                    app:bb_indicatorWidth="6dp"
                    app:bb_scale="0.5625" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:weightSum="3">

                    <!--怀孕四十天-->
                    <LinearLayout
                        android:id="@+id/beiyun"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="61.5dp"
                            android:layout_height="61.5dp"
                            android:layout_centerHorizontal="true"
                            android:src="@mipmap/huaiyunsishizhou" />

                        <TextView
                            style="@style/text13"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="@string/beiyun" />
                    </LinearLayout>

                    <!--280天-->
                    <LinearLayout
                        android:id="@+id/yunyu"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="61.5dp"
                            android:layout_height="61.5dp"
                            android:layout_centerHorizontal="true"
                            android:src="@mipmap/yunqizhuyi" />

                        <TextView
                            style="@style/text13"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="@string/yunyu" />
                    </LinearLayout>
                    <!--孕期注意-->
                    <LinearLayout
                        android:id="@+id/yuer"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="61.5dp"
                            android:layout_height="61.5dp"
                            android:layout_centerHorizontal="true"
                            android:src="@mipmap/erbaibashitian" />

                        <TextView
                            style="@style/text13"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="@string/yuer" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="13dp"
                    android:background="#f1f1f1" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <android.support.design.widget.TabLayout
                    android:id="@+id/tabs"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    app:tabGravity="fill"
                    app:tabIndicatorColor="@color/green"
                    app:tabSelectedTextColor="@color/green"
                    app:tabTextColor="@color/gray10" />
            </FrameLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </android.support.design.widget.CoordinatorLayout>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/refresh_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_question"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:background="@drawable/selectable_common_white_pressed_bg">

                <ImageView
                    android:id="@+id/iv_question"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="43dp"
                    android:layout_marginTop="25.5dp"
                    android:src="@mipmap/ic_question" />

                <TextView
                    android:id="@+id/tv_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23.5dp"
                    android:layout_marginTop="26.5dp"
                    android:layout_toRightOf="@+id/iv_question"
                    android:text="@string/quick_question"
                    android:textColor="@color/article_title"
                    android:textSize="21sp" />

                <TextView
                    android:layout_width="34dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@+id/tv_question"
                    android:background="@drawable/shape_text_red_background"
                    android:gravity="center"
                    android:text="@string/for_free"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_question"
                    android:layout_marginLeft="23.5dp"
                    android:layout_marginTop="14.5dp"
                    android:layout_toRightOf="@+id/iv_question"
                    android:text="@string/question_detail"
                    android:textColor="@color/gray10"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_health"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:background="@drawable/selectable_common_white_pressed_bg">

                <ImageView
                    android:id="@+id/iv_knowledge"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="43dp"
                    android:layout_marginTop="25.5dp"
                    android:src="@mipmap/ic_knowledge" />

                <TextView
                    android:id="@+id/tv_knowledge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23.5dp"
                    android:layout_marginTop="26.5dp"
                    android:layout_toRightOf="@+id/iv_knowledge"
                    android:text="@string/health_and_fitness"
                    android:textColor="@color/article_title"
                    android:textSize="21sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_knowledge"
                    android:layout_marginLeft="23.5dp"
                    android:layout_marginTop="14.5dp"
                    android:layout_toRightOf="@+id/iv_knowledge"
                    android:text="@string/knowledge_detail"
                    android:textColor="@color/gray10"
                    android:textSize="12sp" />

            </RelativeLayout>

            <cn.sampson.android.xiandou.widget.banner.MainPageImageBanner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="10dp"
                app:bb_indicatorCornerRadius="6dp"
                app:bb_indicatorGap="7dp"
                app:bb_indicatorHeight="6dp"
                app:bb_indicatorSelectColor="@color/green"
                app:bb_indicatorStyle="CORNER_RECTANGLE"
                app:bb_indicatorUnselectColor="@color/black"
                app:bb_indicatorWidth="6dp"
                app:bb_scale="0.5625" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/adv_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="5dp"
                android:background="@color/common_gray" />

            <TextView
                style="@style/article_title"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12.5dp"
                android:text="@string/tools"
                android:textStyle="normal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/common_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:orientation="horizontal"
                android:paddingLeft="25dp"
                android:paddingRight="25dp">

                <LinearLayout
                    android:id="@+id/ll_shiguan"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selectable_common_white_pressed_bg"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="28dp"
                        android:src="@mipmap/ic_tube" />

                    <TextView
                        style="@style/title_detail"
                        android:layout_marginTop="18dp"
                        android:text="@string/tube" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_beiyun"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selectable_common_white_pressed_bg"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="28dp"
                        android:src="@mipmap/ic_beiyun" />

                    <TextView
                        style="@style/title_detail"
                        android:layout_marginTop="18dp"
                        android:text="@string/beiyun" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_taijiao"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selectable_common_white_pressed_bg"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="28dp"
                        android:src="@mipmap/ic_taijiao" />

                    <TextView
                        style="@style/title_detail"
                        android:layout_marginTop="18dp"
                        android:text="@string/taijiao" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_yuer"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selectable_common_white_pressed_bg"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="28dp"
                        android:src="@mipmap/ic_yuer" />

                    <TextView
                        style="@style/title_detail"
                        android:layout_marginTop="18dp"
                        android:text="@string/yuer" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</FrameLayout>
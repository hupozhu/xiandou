<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/rl_ad_container"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/iv_banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_main_banner" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:weightSum="3">

            <!--怀孕四十天-->
            <LinearLayout
                android:id="@+id/sizhizhou"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="61.5dp"
                    android:layout_height="61.5dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/huaiyunsishizhou" />

                <TextView
                    style="@style/text13"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="@string/huaiyunsishizhou" />
            </LinearLayout>

            <!--280天-->
            <LinearLayout
                android:id="@+id/erbaibashitian"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="61.5dp"
                    android:layout_height="61.5dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/erbaibashitian" />

                <TextView
                    style="@style/text13"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="@string/erbaibashitian" />
            </LinearLayout>
            <!--孕期注意-->
            <LinearLayout
                android:id="@+id/yunqizhuyi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="61.5dp"
                    android:layout_height="61.5dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/yunqizhuyi" />

                <TextView
                    style="@style/text13"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="@string/yunqizhuyi" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:background="#f1f1f1" />
        <!--胎教早知道-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="19dp"
                android:src="@mipmap/ic_main_book" />

            <ImageView
                android:layout_width="68dp"
                android:layout_height="12.5dp"
                android:layout_marginLeft="4dp"
                android:src="@mipmap/ic_main_taijiao" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_taijiao1"
                android:layout_width="111.5dp"
                android:layout_height="87.5dp"
                android:src="@mipmap/iv_taijiao1" />

            <ImageView
                android:id="@+id/iv_taijiao2"
                android:layout_width="111.5dp"
                android:layout_height="87.5dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/ic_taijiao2" />

            <ImageView
                android:id="@+id/iv_taijiao3"
                android:layout_width="111.5dp"
                android:layout_height="87.5dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/ic_taijiao3" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#f1f1f1" />

        <!--爸爸讲故事-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="19dp"
                android:src="@mipmap/ic_main_star" />

            <ImageView
                android:layout_width="68dp"
                android:layout_height="12.5dp"
                android:layout_marginLeft="4dp"
                android:src="@mipmap/ic_main_babajianggushi" />
        </LinearLayout>
        <!--一千零一夜-->
        <RelativeLayout
            android:id="@+id/rl_yiqianyiye"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/anchor"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginBottom="13dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="13dp"
                android:src="@mipmap/ic_main_yiqianyiye" />

            <TextView
                style="@style/text15"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18dp"
                android:layout_toRightOf="@+id/anchor"
                android:text="@string/yiqianyiye" />

            <ImageView
                android:layout_width="13.5dp"
                android:layout_height="13.5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="23dp"
                android:src="@mipmap/ic_main_next" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="29dp"
            android:layout_marginRight="29dp"
            android:background="#f1f1f1" />

        <!--安徒生童话-->
        <RelativeLayout
            android:id="@+id/rl_antusheng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/anchor1"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginBottom="13dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="13dp"
                android:src="@mipmap/ic_main_antusheng" />

            <TextView
                style="@style/text15"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18dp"
                android:layout_toRightOf="@+id/anchor1"
                android:text="@string/antusheng" />

            <ImageView
                android:layout_width="13.5dp"
                android:layout_height="13.5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="23dp"
                android:src="@mipmap/ic_main_next" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="29dp"
            android:layout_marginRight="29dp"
            android:background="#f1f1f1" />

        <!--格林童话-->
        <RelativeLayout
            android:id="@+id/rl_geling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/anchor2"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginBottom="13dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="13dp"
                android:src="@mipmap/ic_main_gelin" />

            <TextView
                style="@style/text15"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18dp"
                android:layout_toRightOf="@+id/anchor2"
                android:text="@string/gelintonghua" />

            <ImageView
                android:layout_width="13.5dp"
                android:layout_height="13.5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="23dp"
                android:src="@mipmap/ic_main_next" />
        </RelativeLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
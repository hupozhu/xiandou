<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/rl_ad_container"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/iv_banner"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@mipmap/ic_main_banner" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:weightSum="3">

            <!--怀孕四十天-->
            <LinearLayout
                android:id="@+id/beiyun"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="61.5dp"
                    android:layout_height="61.5dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/huaiyunsishizhou" />

                <TextView
                    style="@style/text13"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="@string/beiyun" />
            </LinearLayout>

            <!--280天-->
            <LinearLayout
                android:id="@+id/yunyu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="61.5dp"
                    android:layout_height="61.5dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/yunqizhuyi" />

                <TextView
                    style="@style/text13"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="@string/yunyu" />
            </LinearLayout>
            <!--孕期注意-->
            <LinearLayout
                android:id="@+id/yuer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="61.5dp"
                    android:layout_height="61.5dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/erbaibashitian" />

                <TextView
                    style="@style/text13"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="@string/yuer" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/ad_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:background="#f1f1f1" />



    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
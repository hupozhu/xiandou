<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selectable_common_white_pressed_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="19dp">

            <TextView
                android:id="@+id/tv_title"
                style="@style/title"
                android:layout_width="match_parent"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/tv_tag"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="111111"
                tool:text="我的老公不爱我了" />

            <TextView
                android:id="@+id/tv_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/red1"
                android:textSize="12sp"
                tool:text="#孕育#" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_content"
            style="@style/content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"
            android:maxLines="2"
            android:text="11111"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/image_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone">

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:background="@color/gray11" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/riv_avatar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/default_avatar"
                app:riv_oval="true" />

            <TextView
                android:id="@+id/tv_username"
                style="@style/article_title"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7.5dp"
                android:layout_toRightOf="@+id/riv_avatar"
                android:textColor="@color/article_title"
                android:textSize="12sp"
                android:textStyle="normal"
                tool:text="蒙太急这样挺好的" />

            <TextView
                android:id="@+id/tv_comment_num"
                style="@style/article_title"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="18dp"
                android:textSize="12sp"
                android:textStyle="normal"
                tool:text="10" />

            <ImageView
                android:layout_width="13dp"
                android:layout_height="12.5dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@+id/tv_comment_num"
                android:src="@mipmap/ic_comment" />

        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
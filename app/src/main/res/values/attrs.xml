<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- // ******************************** Expandable *******************************// -->

    <declare-styleable name="SubsamplingScaleImageView">
        <attr name="src" format="reference" />
        <attr name="assetName" format="string" />
        <attr name="panEnabled" format="boolean" />
        <attr name="zoomEnabled" format="boolean" />
        <attr name="quickScaleEnabled" format="boolean" />
        <attr name="tileBackgroundColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ExpandableLayout">
        <attr name="el_headerLayout" format="reference" />
        <attr name="el_contentLayout" format="reference" />
        <attr name="el_duration" format="integer" />
    </declare-styleable>

    <declare-styleable name="ExpandableTextView">
        <attr name="maxCollapsedLines" format="integer" />
        <attr name="animDuration" format="integer" />
        <attr name="animAlphaStart" format="float" />
        <attr name="expandDrawable" format="reference" />
        <attr name="collapseDrawable" format="reference" />
    </declare-styleable>

    <declare-styleable name="LoopView">
        <attr name="view_gravity">
            <enum name="center" value="17" />
            <enum name="left" value="3" />
            <enum name="right" value="5" />
        </attr>
        <attr name="lineColor" format="color" />
        <attr name="topBottomTextColor" format="color" />
        <attr name="centerTextColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="canLoop" format="boolean" />
        <attr name="initPosition" format="integer" />
        <attr name="drawItemCount" format="integer" />
        <attr name="lineSpacingMultiplier" format="float" />

        <!--set number of item displayed, default is 3-->
        <attr name="npv_ShowCount" format="reference|integer" />
        <!--set if show divider, default is true-->
        <attr name="npv_ShowDivider" format="reference|boolean" />
        <attr name="npv_DividerColor" format="reference|color" />
        <attr name="npv_DividerMarginLeft" format="reference|dimension" />
        <attr name="npv_DividerMarginRight" format="reference|dimension" />
        <attr name="npv_DividerHeight" format="reference|dimension" />
        <attr name="npv_TextColorNormal" format="reference|color" />
        <attr name="npv_TextColorSelected" format="reference|color" />
        <attr name="npv_TextColorHint" format="reference|color" />
        <attr name="npv_TextSizeNormal" format="reference|dimension" />
        <attr name="npv_TextSizeSelected" format="reference|dimension" />
        <attr name="npv_TextSizeHint" format="reference|dimension" />
        <attr name="npv_TextArray" format="reference" />
        <attr name="npv_MinValue" format="reference|integer" />
        <attr name="npv_MaxValue" format="reference|integer" />
        <attr name="npv_WrapSelectorWheel" format="reference|boolean" />
        <attr name="npv_RespondChangeOnDetached" format="reference|boolean" />
        <attr name="npv_HintText" format="reference|string" />
        <attr name="npv_EmptyItemHint" format="reference|string" />
        <attr name="npv_MarginStartOfHint" format="reference|dimension" />
        <attr name="npv_MarginEndOfHint" format="reference|dimension" />
        <attr name="npv_ItemPaddingHorizontal" format="reference|dimension" />
        <attr name="npv_ItemPaddingVertical" format="reference|dimension" />
        <attr name="npv_RespondChangeInMainThread" format="reference|boolean" />
        <attr name="npv_TextEllipsize" format="reference|string" />

        <attr name="npv_AlternativeTextArrayWithMeasureHint" format="reference" />
        <attr name="npv_AlternativeTextArrayWithoutMeasureHint" format="reference" />
        <!--the max length of hint content-->
        <attr name="npv_AlternativeHint" format="reference|string" />
    </declare-styleable>

    <!--图片裁剪-->
    <declare-styleable name="CropView">
        <!-- Viewport ratio used to compute height based off view width -->
        <attr name="cropviewViewportRatio" format="float" />
        <!-- Viewport overlay color -->
        <attr name="cropviewViewportOverlayColor" format="color" />
        <!-- Viewport overlay padding -->
        <attr name="cropviewViewportOverlayPadding" format="dimension" />
        <!-- Maximum zoom level -->
        <attr name="cropviewMaxScale" format="float" />
        <!-- Minimum  zoom level -->
        <attr name="cropviewMinScale" format="float" />

    </declare-styleable>

    <!-- // ******************************** BaseBanner *******************************// -->

    <!-- Banner高宽比,范围0-1,默认0.5(for LoopViewPager)-->
    <attr name="bb_scale" format="float" />

    <!--for LoopViewPager start-->
    <!-- 是否支持循环,默认true-->
    <attr name="bb_isLoopEnable" format="boolean" />
    <!-- 滚动延时,默认5秒-->
    <attr name="bb_delay" format="integer" />
    <!-- 滚动间隔,默认5秒-->
    <attr name="bb_period" format="integer" />
    <!-- 是否支持自动滚动,默认true-->
    <attr name="bb_isAutoScrollEnable" format="boolean" />
    <!--for LoopViewPager end-->

    <!-- 设置底部背景条颜色,默认透明 -->
    <attr name="bb_barColor" format="color" />
    <!-- 设置当滚动到最后一个item时是否显示底部背景条 -->
    <attr name="bb_isBarShowWhenLast" format="boolean" />
    <!-- 设置底部背景条padding,单位dp -->
    <attr name="bb_barPaddingLeft" format="dimension" />
    <attr name="bb_barPaddingTop" format="dimension" />
    <attr name="bb_barPaddingRight" format="dimension" />
    <attr name="bb_barPaddingBottom" format="dimension" />
    <!-- 设置标题文字颜色,默认"#ffffff" -->
    <attr name="bb_textColor" format="color" />
    <!-- 设置标题文字大小,单位sp,默认14sp -->
    <attr name="bb_textSize" format="dimension" />
    <!-- 设置是否显示标题,默认true  -->
    <attr name="bb_isTitleShow" format="boolean" />
    <!-- 设置是否显示显示器,默认true  -->
    <attr name="bb_isIndicatorShow" format="boolean" />
    <!-- 设置显示器位置.默认Gravity.CENTER.Gravity.CENTER时文字不显示-->
    <attr name="bb_indicatorGravity">
        <enum name="CENTER" value="17" />
        <enum name="LEFT" value="3" />
        <enum name="RIGHT" value="5" />
    </attr>

    <!-- BaseIndicatorBanner -->
    <!-- 设置显示器样式 -->
    <attr name="bb_indicatorStyle">
        <enum name="DRAWABLE_RESOURCE" value="0" />
        <enum name="CORNER_RECTANGLE" value="1" />
    </attr>
    <!-- 设置显示器宽度,单位dp,默认6dp -->
    <attr name="bb_indicatorWidth" format="dimension" />
    <!-- 设置显示器高度,单位dp,默认6dp -->
    <attr name="bb_indicatorHeight" format="dimension" />
    <!-- 设置显示器间距,单位dp,默认6dp -->
    <attr name="bb_indicatorGap" format="dimension" />

    <!-- 设置显示器选中颜色,默认"#ffffff" -->
    <attr name="bb_indicatorSelectColor" format="color" />
    <!-- 设置显示器未选中颜色,默认"#88ffffff"  -->
    <attr name="bb_indicatorUnselectColor" format="color" />
    <!-- 设置显示器圆角弧度,单位dp,默认3dp -->
    <attr name="bb_indicatorCornerRadius" format="dimension" />

    <!-- 设置显示器选中drawable资源 -->
    <attr name="bb_indicatorSelectRes" format="reference" />
    <!-- 设置显示器未选中drawable资源 -->
    <attr name="bb_indicatorUnselectRes" format="reference" />

    <declare-styleable name="BaseBanner">
        <attr name="bb_scale" />
        <attr name="bb_isLoopEnable" />
        <attr name="bb_delay" />
        <attr name="bb_period" />
        <attr name="bb_isAutoScrollEnable" />
        <attr name="bb_barColor" />
        <attr name="bb_isBarShowWhenLast" />
        <attr name="bb_barPaddingLeft" />
        <attr name="bb_barPaddingTop" />
        <attr name="bb_barPaddingRight" />
        <attr name="bb_barPaddingBottom" />
        <attr name="bb_textColor" />
        <attr name="bb_textSize" />
        <attr name="bb_isTitleShow" />
        <attr name="bb_isIndicatorShow" />
        <attr name="bb_indicatorGravity" />
    </declare-styleable>

    <declare-styleable name="BaseIndicatorBanner">
        <attr name="bb_indicatorStyle" />
        <attr name="bb_indicatorWidth" />
        <attr name="bb_indicatorHeight" />
        <attr name="bb_indicatorGap" />
        <attr name="bb_indicatorSelectColor" />
        <attr name="bb_indicatorUnselectColor" />
        <attr name="bb_indicatorCornerRadius" />
        <attr name="bb_indicatorSelectRes" />
        <attr name="bb_indicatorUnselectRes" />
    </declare-styleable>

</resources>